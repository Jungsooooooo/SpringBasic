<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace = "com.edu.movie.mappers.movieMapper">

	<!-- 예매된 영화 좌석 목록 가져오기  -->
	<select id="getSeatList" parameterType="int" resultType="com.edu.movie.dto.SeatDTO">
	SELECT 	* 
	FROM 	reservation_seat
	WHERE	movieID		= #{movieID}
	ORDER BY seatID
	</select>
	
	<!-- 좌석 예약 -->
	<!-- 영화아이디와 사용자 아이디는 임시로 지정해서 사용한다. -->
	<insert id="insertSeatID" parameterType="int">
		INSERT	INTO reservation_seat
		VALUES	(1, 'a100', #{seatID})
	</insert>
	
	

</mapper>

